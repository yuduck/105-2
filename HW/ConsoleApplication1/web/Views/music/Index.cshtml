@model List<Models.music>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Search = ViewBag.Search;
    var Musics = Model;//ViewBag.Stations;


    //this.Model
}
<form class="form-inline" method="post" action="~/music/Index">
    <div class="form-group">

        <input type="text" class="form-control" placeholder="名稱"
               name="search" id="search"
               value="@ViewBag.Search">
    </div>

    <button type="submit" class="btn btn-default">搜尋</button>
</form>
<hr />
<div class="list-group">
    <a href="#" class="list-group-item active">
        Musics
    </a>
    @for (int i = 0; i < Model.Count; i++)
    {

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Model[i].title</h4>
            <p class="list-group-item-text">@Model[i].name</p>
        </a>

    }



</div>